<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">

    </style>


    <style name="AppTheme.Toolbar" parent="AppTheme">
        <!--This line changes the color of text in Toolbar-->
        <item name="android:textColorPrimary">@color/on_surface_variant</item>
        <!--This line changes the color of icons in toolbar (back, overflow menu icons)-->
        <item name="android:textColorSecondary">@color/on_surface</item>
    </style>

    <style name="ShapeAppearanceOverlay.MaterialCardView.Cut" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopRight">8dp</item>
        <item name="cornerSizeTopLeft">8dp</item>
        <item name="cornerSizeBottomRight">0dp</item>
        <item name="cornerSizeBottomLeft">0dp</item>
    </style>

    <style name="ActionChip">
        <item name="chipCornerRadius">40dp</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingEnd">16dp</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="chipBackgroundColor">@color/surface_container_highest</item>
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:textColor">@color/on_surface_variant</item>
        <item name="android:textSize">14dp</item>
        <item name="android:checkable">false</item>
        <item name="chipIconSize">18dp</item>
        <item name="checkedIconEnabled">false</item>
        <item name="chipStrokeColor">@color/outline</item>
        <item name="chipStrokeWidth">0.7dp</item>
    </style>

    <style name="FilterChip">
        <item name="chipCornerRadius">8dp</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingEnd">16dp</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="chipBackgroundColor">@color/chip_filter_background_color</item>
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:textColor">@color/on_surface_variant</item>
        <item name="android:textSize">14dp</item>
        <item name="android:checkable">true</item>
        <item name="chipIconSize">18dp</item>
        <item name="checkedIcon">@drawable/ic_chip_checked_on_surface</item>
        <item name="checkedIconEnabled">true</item>
        <item name="chipIconEnabled">true</item>
        <item name="checkedIconVisible">true</item>
        <item name="chipStrokeColor">@color/outline</item>
        <item name="chipStrokeWidth">0.7dp</item>
    </style>

    <style name="FilterChipTime">
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingEnd">16dp</item>
        <item name="android:paddingTop">0dp</item>
        <item name="android:paddingBottom">0dp</item>
        <item name="chipBackgroundColor">@color/chip_filter_background_color</item>
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:textColor">@color/on_surface_variant</item>
        <item name="android:textSize">14dp</item>
        <item name="android:checkable">true</item>
        <item name="chipIconSize">18dp</item>
        <item name="checkedIcon">@drawable/ic_chip_checked_on_surface</item>
        <item name="checkedIconEnabled">true</item>
        <item name="chipIconEnabled">true</item>
        <item name="checkedIconVisible">true</item>
        <item name="chipStrokeColor">@color/outline</item>
        <item name="chipStrokeWidth">0.7dp</item>
    </style>
    <style name="CustomNavigationBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@color/main</item>
    </style>
    <style name="CustomSearchView" parent="Widget.AppCompat.SearchView">
        <item name="searchIcon">@drawable/ic_searchview_on_surface</item>
        <item name="colorAccent">@color/surface_variant</item>
        <item name="android:queryBackground">@android:color/transparent</item>
        <item name="android:iconifiedByDefault">false</item>
    </style>

    <style name="CustomChipSortLeft" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopRight">0dp</item>
        <item name="cornerSizeTopLeft">10dp</item>
        <item name="cornerSizeBottomRight">0dp</item>
        <item name="cornerSizeBottomLeft">10dp</item>

    </style>

    <style name="CustomChipSortRight" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopRight">10dp</item>
        <item name="cornerSizeTopLeft">0dp</item>
        <item name="cornerSizeBottomRight">10dp</item>
        <item name="cornerSizeBottomLeft">0dp</item>
    </style>
    <style name="NavigationBarColor" parent="Widget.Material3.BottomNavigationView.ActiveIndicator" >
        <item name="android:color">@color/secondary</item>
    </style>

    <style name="Widget.App.RadioButton" parent="Widget.MaterialComponents.CompoundButton.RadioButton">
        <item name="materialThemeOverlay">@style/ThemeOverlay.App.RadioButton</item>
    </style>

    <style name="ThemeOverlay.App.RadioButton" parent="">
        <item name="colorOnSurface">@color/on_surface_variant</item>
        <item name="colorSecondary">@color/primary</item>
    </style>

    <style name="ShapeAppearanceOverlay.App.CornerSize50Percent" parent="">
        <item name="cornerSize">15%</item>
    </style>

    <style name="TabTextApperance" parent="">
        <item name="fontFamily">@font/roboto</item>
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:textSize">18sp</item>
        <item name="colorPrimary">@color/primary</item>
    </style>

    <style name="SearchView_Hint_Text" parent="">
        <item name="android:textColor">@color/on_surface_variant</item>
        <item name="android:textSize">16dp</item>
    </style>

    <style name="Google_highlight_custom_blue" parent="">
        <item name="android:textColor">#4285F4</item>
        <item name="android:textColorHighlight">#4285F4</item>
        <item name="android:shadowColor">#4285F4</item>
        <item name="android:shadowDx">1.8</item>
        <item name="android:shadowDy">1.3</item>
        <item name="android:shadowRadius">3</item>
    </style>

    <style name="Google_highlight_custom_red" parent="">
        <item name="android:textColor">#DB4437</item>
        <item name="android:textColorHighlight">#DB4437</item>
        <item name="android:shadowColor">#DB4437</item>
        <item name="android:shadowDx">1.8</item>
        <item name="android:shadowDy">1.3</item>
        <item name="android:shadowRadius">3</item>
    </style>

    <style name="Google_highlight_custom_yellow" parent="">
        <item name="android:textColor">#F4B400</item>
        <item name="android:textColorHighlight">#F4B400</item>
        <item name="android:shadowColor">#F4B400</item>
        <item name="android:shadowDx">1.8</item>
        <item name="android:shadowDy">1.3</item>
        <item name="android:shadowRadius">3</item>
    </style>

    <style name="Google_highlight_custom_green" parent="">
        <item name="android:textColor">#0F9D58</item>
        <item name="android:textColorHighlight">#0F9D58</item>
        <item name="android:shadowColor">#0F9D58</item>
        <item name="android:shadowDx">1.8</item>
        <item name="android:shadowDy">1.3</item>
        <item name="android:shadowRadius">3</item>
    </style>

    <style name="TripAdvisor_highlight" parent="">
        <item name="android:textColor">#00af87</item>
        <item name="android:textColorHighlight">#00af87</item>
        <item name="android:shadowColor">#00af87</item>
        <item name="android:shadowDx">1.8</item>
        <item name="android:shadowDy">1.3</item>
        <item name="android:shadowRadius">3</item>
    </style>

    <style name="CustomDialog" parent="ThemeOverlay.MaterialComponents.MaterialAlertDialog">
        <item name="colorPrimary">@color/primary_dark_variant</item>
        <item name="dialogCornerRadius">12dp</item>
        <item name="android:background">@color/surface_container_low</item>
        <item name="android:textColor">@color/on_surface_variant</item>

    </style>

    
    <style name="CustomTextInputLayout">
        <item name="boxStrokeColor">@color/textfield_stroke_color_selector</item>
        <item name="android:textColorHint">@color/on_surface_dark_variant</item>
        <item name="hintTextColor">@color/primary_dark_variant</item>
        <item name="cursorColor">@color/on_surface</item>
    </style>

    <style name="CustomTextInputLayoutTransparent" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@android:color/transparent</item>
        <item name="boxStrokeWidthFocused">2dp</item>
        <item name="boxStrokeWidth">0dp</item>
        <item name="boxBackgroundColor">@android:color/transparent</item>
        <item name="android:backgroundTint">@color/outline</item>
    </style>
    >

    <style name="ButtonTextApperance">
        <item name="fontFamily">@font/roboto_medium</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="CustomPreferenceTextStyle" parent="Preference">
        <item name="android:titleTextColor">@color/error</item>
        <item name="iconTint">@color/error</item>
    </style>



</resources>