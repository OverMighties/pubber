<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/SignUpFragment">

    <ImageView
        android:id="@+id/IV_goback_sign_up"
        android:layout_width="29dp"
        android:layout_height="29dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_arrow_back" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/textInputLayoutEmailSignUp"
        style="@style/CustomTextInputLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="150dp"
        android:layout_marginRight="30dp"
        android:background="@null"
        android:hint="@string/hint_email"
        app:errorEnabled="true"
        app:errorTextColor="@color/error"
        app:errorIconTint="@color/error"
        app:boxStrokeErrorColor="@color/error"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/edit_field_email_sing_up"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:textColor="@color/on_surface" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/textInputLayoutPasswordSignUp"
        style="@style/CustomTextInputLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="60dp"
        android:hint="@string/hint_password"
        app:errorEnabled="false"
        app:errorTextColor="@color/error"
        app:errorIconTint="@color/error"
        app:boxStrokeErrorColor="@color/error"
        app:endIconMode="password_toggle"
        app:endIconTint="@color/textfield_icon_color_selector"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textInputLayoutEmailSignUp">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/edit_filed_password_sing_up"
            android:background="@null"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:inputType="textPassword"
            android:textColor="@color/on_surface" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/textInputLayoutConfirmPasswordSignUp"
        style="@style/CustomTextInputLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="30dp"
        android:layout_marginRight="30dp"
        android:background="@null"
        android:hint="@string/hint_confirm_password"
        app:endIconMode="password_toggle"
        app:endIconTint="@color/textfield_icon_color_selector"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textInputLayoutPasswordSignUp">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/edit_field_confirm_password_sign_up"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:inputType="textPassword"
            android:textColor="@color/on_surface" />
    </com.google.android.material.textfield.TextInputLayout>

    <Button
        android:id="@+id/button_create_account_sign_up"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:background="@drawable/button_shape_container"
        android:textColor="@color/on_secondary_container"
        android:text="@string/create_account"
        app:errorEnabled="true"
        app:errorTextColor="@color/error"
        app:errorIconTint="@color/error"
        app:boxStrokeErrorColor="@color/error"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.661"
        app:backgroundTint="@null"
        />

    <ProgressBar
        android:id="@+id/progressBarPassword"
        style="?android:attr/progressBarStyleHorizontal"
        android:visibility="invisible"
        android:layout_marginStart="4dp"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@+id/textInputLayoutPasswordSignUp"
        app:layout_constraintTop_toBottomOf="@+id/textInputLayoutPasswordSignUp" />

    <TextView
        android:visibility="invisible"
        android:id="@+id/progressTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/weak_password"
        android:layout_marginBottom="2dp"
        android:layout_marginStart="5dp"
        app:layout_constraintBottom_toBottomOf="@+id/progressBarPassword"
        app:layout_constraintStart_toEndOf="@+id/progressBarPassword"
        app:layout_constraintTop_toTopOf="@+id/progressBarPassword" />

</androidx.constraintlayout.widget.ConstraintLayout>