                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/PubWalkDistance"
                    app:layout_constraintTop_toTopOf="@+id/PubWalkDistance" />

                <TextView
                    android:id="@+id/PubPrice"
