                    app:layout_constraintBottom_toBottomOf="@+id/OvTVTime"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@id/OvTVTime" />

                <TextView
                    android:id="@+id/WrapContentHolder2"
                    android:layout_width="wrap_content"
                    android:layout_height="10dp"
                    android:layout_marginTop="2dp"
                    android:text=""
                    android:visibility="gone"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/OvTvDay7" />

                <TextView
