<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.google.android.material.chip.Chip
        android:id="@+id/detailsTagsCardView"
        style="@style/FilterChip"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:text="@string/tags"
        android:checkable="false"
        android:textColor="@color/on_secondary_container"
        app:chipBackgroundColor="@color/secondary_container"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageViewTagDeleteChange"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginStart="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/detailsTagsCardView"
        app:layout_constraintTop_toTopOf="@+id/detailsTagsCardView"
        app:srcCompat="@drawable/ic_close_on_surface"
        app:tint="@color/on_secondary_container" />
</androidx.constraintlayout.widget.ConstraintLayout>