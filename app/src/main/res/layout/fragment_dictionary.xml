<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/dictionary_fragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/dictionary_image_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/ic_arrow_back"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/dictionary_text_beers"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/beers"
        android:textColor="@color/on_surface"
        android:textSize="20sp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/dictionary_image_back" />

    <ImageView
        android:id="@+id/dictionary_image_beers"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@+id/dictionary_text_beers"
        app:layout_constraintStart_toEndOf="@+id/dictionary_text_beers"
        app:layout_constraintTop_toTopOf="@+id/dictionary_text_beers"
        app:srcCompat="@drawable/ic_right_expand" />

    <TextView
        android:id="@+id/dictionary_text_drinks"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/drinks"
        android:layout_marginTop="8dp"
        android:layout_marginStart="16dp"
        android:textColor="@color/on_surface"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/dictionary_text_beers" />

    <ImageView
        android:id="@+id/dictionary_image_drinks"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        app:layout_constraintBottom_toBottomOf="@+id/dictionary_text_drinks"
        app:layout_constraintStart_toEndOf="@+id/dictionary_text_drinks"
        app:layout_constraintTop_toTopOf="@+id/dictionary_text_drinks"
        app:srcCompat="@drawable/ic_right_expand" />
</androidx.constraintlayout.widget.ConstraintLayout>