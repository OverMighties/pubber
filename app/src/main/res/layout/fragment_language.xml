<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/language_fragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".feature.firstopen.LanguageFragment">


    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="@string/choose_language"
        android:textColor="@color/on_surface"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/TV_english"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:text="@string/english"
        android:textColor="@color/on_surface"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="@+id/CardView_english"
        app:layout_constraintStart_toStartOf="@+id/CardView_english"
        app:layout_constraintTop_toBottomOf="@+id/CardView_english" />

    <TextView
        android:id="@+id/TV_polish"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:text="@string/polish"
        android:textColor="@color/on_surface"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="@+id/CardView_polish"
        app:layout_constraintStart_toStartOf="@+id/CardView_polish"
        app:layout_constraintTop_toBottomOf="@id/CardView_polish" />

    <TextView
        android:id="@+id/TV_ukrainian"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:text="TextView"
        android:textColor="@color/on_surface"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="@+id/CardView_ukrainian"
        app:layout_constraintStart_toStartOf="@+id/CardView_ukrainian"
        app:layout_constraintTop_toBottomOf="@id/CardView_ukrainian" />

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/CardView_ukrainian"
        android:layout_width="60dp"
        android:layout_height="40dp"
        app:cardCornerRadius="0dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/CardView_polish"
        app:layout_constraintTop_toTopOf="@id/CardView_polish"
        app:strokeColor="@color/surface"
        app:strokeWidth="0dp">

        <ImageView
            android:id="@+id/IV_ukrainian"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/ic_ua"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/CardView_polish"
        android:layout_width="64dp"
        android:layout_height="40dp"
        android:layout_marginTop="16dp"
        app:cardCornerRadius="0dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView5"
        app:strokeColor="@color/surface"
        app:strokeWidth="0dp">

        <ImageView
            android:id="@+id/IV_polish"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/ic_pl"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/CardView_english"
        android:layout_width="80dp"
        android:layout_height="40dp"
        app:cardCornerRadius="0dp"
        app:layout_constraintBottom_toBottomOf="@+id/CardView_polish"
        app:layout_constraintEnd_toStartOf="@+id/CardView_polish"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/CardView_polish"
        app:strokeColor="@color/surface"
        app:strokeWidth="0dp">


        <ImageView
            android:id="@+id/IV_english"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/ic_eng"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </com.google.android.material.card.MaterialCardView>

    <Button
        android:id="@+id/buttonNextT"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="12dp"
        android:background="@drawable/button_shape_square_container"
        android:text="@string/next"
        android:textColor="@color/on_secondary_container"
        app:backgroundTint="@null"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>