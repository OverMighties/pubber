<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    >

    <com.google.android.material.card.MaterialCardView

        android:layout_width="match_parent"
        android:layout_height="110dp"
        app:cardCornerRadius="30dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:strokeColor="#59463A"
        android:weightSum="10"
        app:cardBackgroundColor="#42332E">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">


            <ImageView
                android:id="@+id/PubImage"
                android:layout_width="135dp"
                android:layout_height="0dp"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="4dp"
                android:clickable="false"
                android:contentDescription="Przykładowe zdjęcie pubu"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.02"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="1.0"
                app:srcCompat="@drawable/zdjecie1" />

            <TextView
                android:id="@+id/nazwaPubu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="1dp"
                android:layout_marginTop="16dp"
                android:minLines="0"
                android:maxLines="1"
                android:gravity="top"
                android:text="Nameg"
                android:fontFamily="@font/roboto_bold"
                android:textColor="#FFFFFF"
                android:textSize="22sp"
                app:layout_constraintStart_toEndOf="@+id/PubImage"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/timeOpenToday_card_view_row"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:fontFamily="@font/roboto"

                android:layout_marginTop="1dp"
                android:background="@drawable/roundstyle"
                android:gravity="center"
                android:shadowColor="@color/highlightClose"
                android:shadowDx="1.8"
                android:shadowDy="1.3"
                android:shadowRadius="3"
                android:text="Otwarte jeszcze 2 godziny"
                android:textColor="@color/highlightClose"
                android:textSize="10dp"
                app:layout_constraintStart_toEndOf="@+id/PubImage"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/drogaPieszo"
                android:layout_width="wrap_content"
                android:layout_height="22dp"
                android:layout_marginStart="12dp"
                android:background="@drawable/roundstyle"
                android:gravity="center"
                android:text="1.5km"
                android:fontFamily="@font/roboto"

                android:textColor="#FFFFFF"
                android:textSize="16sp"
                app:layout_constraintStart_toEndOf="@+id/ocenaKoszty"
                app:layout_constraintTop_toTopOf="@+id/ocenaKoszty" />

            <TextView
                android:id="@+id/ocenaKoszty"
                android:layout_width="wrap_content"
                android:layout_height="22dp"
                android:layout_marginTop="6dp"
                android:fontFamily="@font/roboto"

                android:gravity="center"
                android:text="$$$"
                android:textColor="#FFFFFF"
                android:textSize="16sp"
                app:layout_constraintStart_toEndOf="@+id/PubImage"
                app:layout_constraintTop_toBottomOf="@+id/ocenaSredniaSerwisy" />

            <TextView
                android:id="@+id/ocenaJakosc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="invisible"
                android:layout_marginStart="32dp"
                android:gravity="center"
                android:textColor="#FFFFFF"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@+id/ocenaKoszty"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.828" />

            <TextView
                android:id="@+id/ocenaSredniaSerwisy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:gravity="center"
                android:text="4.5"
                android:fontFamily="@font/roboto"

                android:textColor="#FFFFFF"
                android:textSize="16sp"
                app:layout_constraintStart_toEndOf="@+id/PubImage"
                app:layout_constraintTop_toBottomOf="@+id/nazwaPubu" />

            <ImageButton
                android:id="@+id/heart"
                android:layout_width="40dp"
                android:visibility="invisible"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="4dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/heartempty" />

            <ImageView
                android:id="@+id/ocenaIV"
                android:layout_width="80dp"
                android:layout_height="22dp"
                app:layout_constraintStart_toEndOf="@+id/ocenaSredniaSerwisy"
                app:layout_constraintTop_toTopOf="@+id/ocenaSredniaSerwisy"
                app:srcCompat="@drawable/background" />

            <TextView
                android:id="@+id/liczbaOcen"
                android:layout_width="wrap_content"
                android:layout_height="22dp"
                android:text="(1250)"
                android:fontFamily="@font/roboto"

                android:textColor="#FFFFFF"
                android:textSize="16sp"
                app:layout_constraintStart_toEndOf="@+id/ocenaIV"
                app:layout_constraintTop_toTopOf="@+id/ocenaIV" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:layout_marginBottom="2dp"
                android:text="na nogach od ciebie"
                android:textColor="#FFFFFF"
                android:shadowColor="@color/white"
                android:shadowDx="1.8"
                android:visibility="gone"
                android:shadowDy="1.3"
                android:shadowRadius="3"
                android:textSize="10sp"
                app:layout_constraintBottom_toBottomOf="@+id/drogaPieszo"
                app:layout_constraintStart_toEndOf="@+id/drogaPieszo" />

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="wrap_content"
                android:layout_height="15dp"
                android:layout_marginTop="3.5dp"
                app:layout_constraintStart_toEndOf="@+id/drogaPieszo"
                app:layout_constraintTop_toTopOf="@+id/drogaPieszo"
                app:srcCompat="@drawable/person_walking_vector_asset" />


        </androidx.constraintlayout.widget.ConstraintLayout>

    </com.google.android.material.card.MaterialCardView>


</androidx.constraintlayout.widget.ConstraintLayout>