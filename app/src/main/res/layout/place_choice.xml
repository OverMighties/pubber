<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/placeChoice_fragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".app.ui.PlaceChoiceFragment">

    <Button
        android:id="@+id/placeChoice_button_cracow"
        android:layout_width="300dp"
        android:layout_height="100dp"
        android:text="Kraków"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/placeChoice_button_warsaw" />

    <Button
        android:id="@+id/placeChoice_button_warsaw"
        android:layout_width="300dp"
        android:layout_height="100dp"
        android:text="Warszawa"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/placeChoice_button_rzeszow"
        android:layout_width="300dp"
        android:layout_height="100dp"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:text="Rzeszów"
        app:layout_constraintBottom_toTopOf="@+id/placeChoice_button_warsaw"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>