<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/searcher_bottomSheet"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/surface_variant_secondary"
    android:paddingTop="12dp"
    android:paddingBottom="8dp"
    android:paddingStart="16dp"
    android:paddingEnd="16dp">

        <TextView
            android:id="@+id/searcherBSh_text_relevance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:fontFamily="@font/roboto_medium"
            android:text="@string/sort_relevance"
            android:textColor="@color/on_surface_variant"
            android:textSize="20sp"

            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/searcherBSh_text_alphabetical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="12dp"
            android:fontFamily="@font/roboto_medium"
            android:text="@string/sort_alphabetical"
            android:textColor="@color/on_surface_variant"
            android:textSize="20sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/searcherBSh_text_relevance" />

        <TextView
            android:id="@+id/searcherBSh_text_rating"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="12dp"
            android:fontFamily="@font/roboto_medium"
            android:text="@string/sort_rating"
            android:textColor="@color/on_surface_variant"
            android:textSize="20sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/searcherBSh_text_alphabetical" />

        <TextView
            android:id="@+id/searcherBSh_test_distance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="12dp"

            android:fontFamily="@font/roboto_medium"
            android:text="@string/sort_distance"
            android:textColor="@color/on_surface_variant"
            android:textSize="20sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/searcherBSh_text_rating" />

        <RadioButton
            android:id="@+id/searcherBSh_radioButton_relevance"
            style="@style/Widget.App.RadioButton"
            android:layout_width="38dp"
            android:layout_height="38dp"
            app:layout_constraintBottom_toBottomOf="@+id/searcherBSh_text_relevance"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/searcherBSh_text_relevance" />

        <RadioButton
            android:id="@+id/searcherBSh_radioButton_alphabetical"
            style="@style/Widget.App.RadioButton"
            android:layout_width="38dp"
            android:layout_height="38dp"
            app:layout_constraintBottom_toBottomOf="@+id/searcherBSh_text_alphabetical"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/searcherBSh_text_alphabetical" />

        <RadioButton

            android:id="@+id/searcherBSh_radioButton_rating"
            style="@style/Widget.App.RadioButton"
            android:layout_width="38dp"
            android:layout_height="38dp"
            app:layout_constraintBottom_toBottomOf="@+id/searcherBSh_text_rating"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/searcherBSh_text_rating" />

        <RadioButton
            android:id="@+id/searcherBSh_radioButton_distance"
            style="@style/Widget.App.RadioButton"
            android:layout_width="38dp"
            android:layout_height="38dp"
            app:layout_constraintBottom_toBottomOf="@id/searcherBSh_test_distance"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/searcherBSh_test_distance" />


</androidx.constraintlayout.widget.ConstraintLayout>