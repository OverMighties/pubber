<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:padding="12dp"
    android:background="@color/surface_variant_secondary"
    android:layout_height="wrap_content">


        <TextView
            android:id="@+id/textViewSortBy_sort_pop_up"
            android:layout_width="wrap_content"
            android:layout_height="44dp"
            android:layout_marginTop="16dp"
            android:visibility="gone"
            android:textColor="@color/on_surface_variant"
            android:fontFamily="@font/roboto_black"
            android:text="Sortuj wedÅ‚ug"
            android:textSize="24sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <TextView
            android:id="@+id/textViewRelevance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:fontFamily="@font/roboto_medium"
            android:text="@string/sort_relevance"
            android:textSize="20sp"
            android:textColor="@color/on_surface_variant"

            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textViewAlphabetical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="12dp"
            android:fontFamily="@font/roboto_medium"
            android:text="@string/sort_alphabetical"
            android:textColor="@color/on_surface_variant"
            android:textSize="20sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textViewRelevance" />

        <TextView
            android:id="@+id/textViewRating"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="12dp"
            android:fontFamily="@font/roboto_medium"
            android:text="@string/sort_rating"
            android:textSize="20sp"
            android:textColor="@color/on_surface_variant"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textViewAlphabetical" />

        <TextView
            android:id="@+id/testViewDistance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="12dp"

            android:textColor="@color/on_surface_variant"
            android:fontFamily="@font/roboto_medium"
            android:text="@string/sort_distance"
            android:textSize="20sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textViewRating" />

        <RadioButton
            android:id="@+id/radio_butt_relevance"
            android:layout_width="38dp"
            android:layout_height="38dp"
            android:layout_marginEnd="24dp"
            style="@style/Widget.App.RadioButton"
            app:layout_constraintBottom_toBottomOf="@+id/textViewRelevance"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/textViewRelevance" />

        <RadioButton
            android:id="@+id/radio_butt_alphabetical"
            style="@style/Widget.App.RadioButton"
            android:layout_width="38dp"
            android:layout_height="38dp"
            android:layout_marginEnd="24dp"
            app:layout_constraintBottom_toBottomOf="@+id/textViewAlphabetical"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/textViewAlphabetical" />

        <RadioButton

            android:id="@+id/radio_butt_rating"
            style="@style/Widget.App.RadioButton"
            android:layout_width="38dp"
            android:layout_height="38dp"
            android:layout_marginEnd="24dp"
            app:layout_constraintBottom_toBottomOf="@+id/textViewRating"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/textViewRating" />

        <RadioButton
            android:id="@+id/radio_butt_distance"
            style="@style/Widget.App.RadioButton"
            android:layout_width="38dp"
            android:layout_height="38dp"
            android:layout_marginEnd="24dp"
            app:layout_constraintBottom_toBottomOf="@id/testViewDistance"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/testViewDistance" />


</androidx.constraintlayout.widget.ConstraintLayout>