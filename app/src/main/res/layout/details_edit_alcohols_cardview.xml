<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:paddingTop="8dp">

    <com.google.android.material.chip.Chip
        android:id="@+id/chipAlcohol"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/alcohols"
        style="@style/FilterChip"
        android:checkable="false"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textViewAlcoholStyles"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/styles"
        android:textSize="12sp"
        android:layout_marginTop="-8dp"
        android:textColor="@color/on_surface_variant"
        app:layout_constraintEnd_toEndOf="@+id/chipAlcohol"
        app:layout_constraintStart_toStartOf="@+id/chipAlcohol"
        app:layout_constraintTop_toBottomOf="@+id/chipAlcohol" />

    <ImageView
        android:id="@+id/imageViewDeleteChange"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginStart="16dp"
        app:layout_constraintBottom_toBottomOf="@+id/chipAlcohol"
        app:layout_constraintStart_toEndOf="@+id/chipAlcohol"
        app:layout_constraintTop_toTopOf="@+id/chipAlcohol"
        app:srcCompat="@drawable/ic_close_on_surface"
        app:tint="@color/on_secondary_container" />
</androidx.constraintlayout.widget.ConstraintLayout>