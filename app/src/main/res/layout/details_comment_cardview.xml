<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:paddingBottom="8dp"
    android:background="@drawable/constraint_layout_margin_down_dim"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/comTVNickname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/nickname"
        android:textSize="16sp"
        android:textColor="@color/on_surface"
        android:layout_marginTop="8dp"
        android:layout_marginStart="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/comTVOrigin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/origin"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="@+id/comTVNickname"
        app:layout_constraintStart_toEndOf="@+id/comTVNickname"
        app:layout_constraintTop_toTopOf="@+id/comTVNickname" />

    <TextView
        android:id="@+id/comTVRating"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/on_surface"
        android:text="@string/rating"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="@+id/comTVNickname"
        app:layout_constraintTop_toBottomOf="@+id/comTVNickname" />

    <TextView
        android:id="@+id/comTVPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/price"
        android:textColor="@color/on_surface_variant"
        app:layout_constraintStart_toStartOf="@+id/comTVRating"
        app:layout_constraintTop_toBottomOf="@+id/comTVRating" />

    <TextView
        android:id="@+id/comTVContent"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:textColor="@color/on_surface"
        android:text="@string/content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/comTVPrice"
        app:layout_constraintTop_toBottomOf="@+id/comTVPrice" />
</androidx.constraintlayout.widget.ConstraintLayout>