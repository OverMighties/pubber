<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/details_bottomSheet"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/surface_variant_secondary"
    android:orientation="vertical"
    android:paddingStart="16dp"
    android:paddingTop="12dp"
    android:paddingEnd="16dp"
    android:paddingBottom="12dp">

    <TextView
        android:id="@+id/detailsBSh_text_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/propose_change"
        android:textColor="@color/on_surface"
        android:textSize="20sp" />

    <LinearLayout
        android:id="@+id/detailsBSh_ll_alcohols"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:background="@drawable/constraint_layout_half_rounded_up"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/detailsBSh_image_alcohols"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="8dp"
            android:src="@drawable/ic_alcohol" />

        <TextView
            android:id="@+id/detailsBSh_text_alcohols"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:fontFamily="@font/roboto"
            android:text="@string/alcohols"
            android:textColor="@color/on_surface"
            android:textSize="18sp" />

        <ImageView
            android:id="@+id/detailsBSh_image_expandAlcohols"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="center_vertical"
            android:src="@drawable/ic_right_expand" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/detailsBSh_ll_tags"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:layout_marginBottom="12dp"
        android:background="@drawable/constraint_layout_half_rounded_down"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/detailsBSh_image_tags"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="8dp"
            android:src="@drawable/ic_label" />

        <TextView
            android:id="@+id/detailsBSh_text_tags"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:fontFamily="@font/roboto"
            android:text="@string/tags"
            android:textColor="@color/on_surface"
            android:textSize="18sp" />

        <ImageView
            android:id="@+id/detailsBSh_image_expandTags"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="center_vertical"
            android:src="@drawable/ic_right_expand" />
    </LinearLayout>

    <Button
        android:id="@+id/detailsBSh_button_cancel"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@drawable/button_shape_secondary"
        android:text="@string/cancel"
        android:textColor="@color/on_secondary_container"
        app:backgroundTint="@null" />

</LinearLayout>