<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    app:startDestination="@id/mainFragment">
    <fragment
        android:id="@+id/mainFragment"
        android:name="com.overmighties.pubber.app.ui.PlaceChoiceFragment"
        android:label="activity_choice"
        tools:layout="@layout/choice" >
        <action
            android:id="@+id/mainToSearcher"
            app:destination="@id/searcherScreen" />
    </fragment>
    <fragment
        android:id="@+id/searcherScreen"
        android:name="com.overmighties.pubber.feature.search.SearcherFragment"
        android:label="searcher"
        tools:layout="@layout/searcher">
        <action
            android:id="@+id/searcherToFiltration"
            app:destination="@id/filtrationScreen" />
        <action
            android:id="@+id/searcherToDetail"
            app:destination="@id/detailScreen" />
        <action
            android:id="@+id/action_searcherScreen_to_hotPubsFragment"
            app:destination="@id/hotPubsFragment" />
        <action
            android:id="@+id/action_searcherScreen_to_savedFragment"
            app:destination="@id/savedFragment" />
    </fragment>
    <fragment
        android:id="@+id/filtrationScreen"
        android:name="com.overmighties.pubber.feature.search.FilterFragment"
        android:label="filtration"
        tools:layout="@layout/filtration">
        <action
            android:id="@+id/filtrationToSearcher"
            app:destination="@id/searcherScreen" />
    </fragment>
    <fragment
        android:id="@+id/detailScreen"
        android:name="com.overmighties.pubber.feature.pubdetails.DetailsFragment"
        android:label="detail"
        tools:layout="@layout/details" />
    <fragment
        android:id="@+id/hotPubsFragment"
        android:name="com.overmighties.pubber.feature.hotpubs.HotPubsFragment"
        android:label="hot_pubs"
        tools:layout="@layout/hot_pubs" >
        <action
            android:id="@+id/action_hotPubsFragment_to_searcherScreen"
            app:destination="@id/searcherScreen" />
    </fragment>
    <fragment
        android:id="@+id/savedFragment"
        android:name="com.overmighties.pubber.feature.bookmarks.SavedFragment"
        android:label="saved"
        tools:layout="@layout/saved" >
        <action
            android:id="@+id/action_savedFragment_to_searcherScreen"
            app:destination="@id/searcherScreen" />
    </fragment>
</navigation>
